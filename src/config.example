// Init config array based on location (localhost or on server)

function getConfig()
{
    $config = array();
    $config['determineRouteBeforeAppMiddleware'] = true;
    $config['displayErrorDetails'] = true;
    $config['authenticationOn'] = true;
    
    $config['db']['host']   = "";
    $config['db']['user']   = "";
    $config['db']['pass']   = "";
    $config['db']['dbname'] = "";

    return $config;
}

